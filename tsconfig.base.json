{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/client/routes": ["src/routes/client.ts"],
      "@/components": ["src/components/index.ts"],
      "@/container": ["src/repository/Services/container.ts"],
      "@/helpers": ["src/helpers/index.ts"],
      "@/hooks": ["src/hooks/index.ts"],
      "@/interfaces": ["src/repository/Interfaces/index.ts"],
      "@/layouts": ["src/layouts/index.tsx"],
      "@/repository": ["src/repository/Interfaces/index.ts"],
      "@/templates/forms": ["src/templates/Forms/index.ts"],
      "@/teste": ["src/teste/src/index.ts"],
      "@/themes/babbo/templates": ["src/themes/babbo/templates/index.ts"],
      "@/themes/default": ["src/themes/default.tsx"],
      "@/types": ["src/repository/Types/_index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
